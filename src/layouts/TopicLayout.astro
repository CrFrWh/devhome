---
import Layout from "./Layout.astro";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<Layout title={title} description={description}>
  <slot />
</Layout>

<style is:global>
  pre {
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  code {
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
  }

  pre code {
    padding: 0;
  }
</style>
