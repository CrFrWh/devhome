---
import Layout from "./Layout.astro";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<Layout title={title} description={description}>
  <slot />
</Layout>

<style is:global>
  :root {
    --bg: #0d1117;
    --fg: #e6edf3;
    --border: #30363d;
  }
  html,
  body {
    margin: 0;
    min-height: 100%;
    background: var(--bg);
    color: var(--fg);
  }
  .container {
    max-width: 960px;
    margin: 0 auto;
    padding: 1.5rem;
  }

  pre {
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  code {
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
  }

  pre code {
    padding: 0;
  }
</style>
