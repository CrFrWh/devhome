---
import Navigation from "../components/Navigation.astro";

type Props = {
  title?: string;
  description?: string;
};

const { title = "DevHome", description = "Tutorials, blog, and showcase" } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Open Graph / Twitter cards can go here too -->
  </head>
  <body>
    <Navigation />
    <main class="container">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --bg: #0d1117;
    --fg: #e6edf3;
    --border: #30363d;
  }
  html,
  body {
    margin: 0;
    min-height: 100%;
    background: var(--bg);
    color: var(--fg);
  }
  .container {
    max-width: 960px;
    margin: 0 auto;
    padding: 1.5rem;
  }
</style>
